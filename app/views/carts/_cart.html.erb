<article>
  <% if notice %>
    <aside id="notice"><%= notice %></aside>
  <% end %>

  <h2>Ваш кошик</h2>
  <table>
    <%= render(cart.line_items) %>
    <tfoot>
    <tr>
      <th colspan="2">Загальна сума:</th>
      <td class="price"><%= number_to_currency(cart.total_price, locale: :ua) %></td>
    </tr>
    </tfoot>
  </table>

  <div class="actions">
    <%= button_to 'Очистити кошик', cart, method: :delete, data: { confirm: 'Ви впевнені?' } %>
    <%= button_to 'Оформити покупку', new_order_path, method: :get, class: "checkout"%>
  </div>
</article>