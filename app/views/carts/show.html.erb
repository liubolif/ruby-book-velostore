<article>
  <% if notice %>
    <aside id="notice"><%= notice %></aside>
  <% end %>

  <h2>Ваш кошик</h2>
  <table>
    <% @cart.line_items.each do |line_item| %>
      <tr>
        <td class="quantity"><%= line_item.quantity %></td>
        <td><%= line_item.product.title %></td>
        <td class="price"><%= number_to_currency(line_item.total_price, locale: :ua) %></td>
        <td><%= link_to 'Видалити', line_item, method: :delete%></td>
      </tr>
    <% end %>
    <tfoot>
    <tr>
      <th colspan="2">Загальна сума:</th>
      <td class="price"><%= number_to_currency(@cart.total_price, locale: :ua) %></td>
    </tr>
    </tfoot>
  </table>
  <%= button_to 'Очистити кошик', @cart, method: :delete, data: { confirm: 'Ви впевнені?' } %>
</article>